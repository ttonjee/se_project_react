server {

  server_name  api.flexx.crabdance.com;

  location / {
    proxy_pass http://localhost:3001;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection 'upgrade';
    proxy_set_header Host $host;
    proxy_cache_bypass $http_upgrade;
  }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/flexx.crabdance.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/flexx.crabdance.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

server {

  server_name flexx.crabdance.com  www.flexx.crabdance.com;

  root /home/thetonjees07/frontend;

  location / {
     try_files $uri $uri/ /index.html =404;
  }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/flexx.crabdance.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/flexx.crabdance.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

server {
    if ($host = www.flexx.crabdance.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    if ($host = api.flexx.crabdance.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    if ($host = flexx.crabdance.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

  listen 80;

  server_name flexx.crabdance.com  www.flexx.crabdance.com api.flexx.crabdance.com;
    return 404; # managed by Certbot

}
